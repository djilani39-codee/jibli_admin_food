default_platform(:ios)

platform :ios do
  desc "Upload build to TestFlight using App Store Connect API key"
  lane :upload_to_testflight do |options|
    api_key_path = options[:api_key_path] || ENV['APP_STORE_CONNECT_API_KEY_PATH'] || './fastlane/appstore_connect_api_key.json'
    UI.message("Using API key: #{api_key_path}")
    upload_to_testflight(api_key: api_key_path)
  end
end
